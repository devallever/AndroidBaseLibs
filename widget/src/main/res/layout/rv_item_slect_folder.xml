<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:scaleType="centerCrop"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:id="@+id/tv_album_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="12dp"
            android:layout_toEndOf="@id/iv_image"
            android:layout_toRightOf="@id/iv_image"
            android:text="全部"
            android:textColor="#000000"
            android:textSize="16sp"
            tools:ignore="RtlHardcoded" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_below="@+id/tv_album_name"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_toEndOf="@id/iv_image"
            android:layout_toRightOf="@id/iv_image"
            tools:ignore="RtlHardcoded">

            <ImageView
                android:id="@+id/iv_video"
                style="@style/item_select_album_iv_count_style"
                android:src="@drawable/ic_album_video_flag"
                android:tint="#000000" />

            <TextView
                android:id="@+id/tv_video_count"
                style="@style/item_select_album_tv_count_style"
                android:layout_toEndOf="@+id/iv_video"
                android:layout_toRightOf="@+id/iv_video"
                tools:ignore="RtlHardcoded" />

            <ImageView
                android:id="@+id/iv_photo"
                style="@style/item_select_album_iv_count_style"
                android:layout_marginStart="76dp"
                android:layout_marginLeft="76dp"
                android:src="@drawable/ic_album_image_flag"
                android:tint="#000000"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:id="@+id/tv_photo_count"
                style="@style/item_select_album_tv_count_style"
                android:layout_toEndOf="@id/iv_photo"
                android:layout_toRightOf="@id/iv_photo"
                tools:ignore="RtlHardcoded" />

            <ImageView
                android:id="@+id/iv_audio"
                style="@style/item_select_album_iv_count_style"
                android:layout_marginStart="76dp"
                android:layout_marginLeft="76dp"
                android:layout_toRightOf="@+id/iv_photo"
                android:src="@drawable/ic_album_image_flag"
                android:tint="#000000"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:id="@+id/tv_audio_count"
                style="@style/item_select_album_tv_count_style"
                android:layout_toEndOf="@id/iv_audio"
                android:layout_toRightOf="@id/iv_audio"
                tools:ignore="RtlHardcoded" />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="#19474747" />
    </RelativeLayout>
</layout>
